<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- 버튼의 기본 크기 설정 -->
        <item name="android:layout_width">@dimen/height</item>
        <item name="android:layout_height">@dimen/width</item>
        <!-- 버튼의 배경색 설정 -->
        <item name="backgroundTint">@color/white</item>
        <!-- 필요한 다른 스타일 속성 추가 -->
    </style>
    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/shape_top_rounded_20dp</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_color</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_color</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>
</resources>
