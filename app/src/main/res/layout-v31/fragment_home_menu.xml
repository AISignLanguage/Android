<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintWidth_percent="0.9"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/viewpager1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.9"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_poster">

                <ImageView
                    android:id="@+id/ib_map"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_map"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ib_dic"
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    app:layout_constraintWidth_percent="0.5"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_dic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/ib_map"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ib_youtube"
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    app:layout_constraintWidth_percent="0.5"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_youtube"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/ib_map"
                    app:layout_constraintTop_toBottomOf="@+id/ib_dic"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.2"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/ib_vib"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_vib"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageButton5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_qr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton6"
                    app:layout_constraintStart_toEndOf="@+id/ib_vib"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageButton6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clipToOutline="true"
                    android:src="@drawable/streaming"
                    android:background="@drawable/rounded_square_20dp_width2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
